# The IP the server will listen on
LISTEN_IP=127.0.0.1

# The port the server will listen on
PORT=1337

# The IP address mediasoup will bind to for WebRTC traffic.
# Use 0.0.0.0 to listen on all interfaces (required for external connections).
# Use 127.0.0.1 only for local development.
MEDIASOUP_LISTEN_IP=0.0.0.0

# The public IP address or domain name that clients will use to connect to mediasoup.
# For local development, use 127.0.0.1.
# For production, use your server's public IP or domain name (e.g., rc.exatek.de).
MEDIASOUP_ANNOUNCED_IP=127.0.0.1

# Initial/start bitrate for video codecs (kbps)
MEDIA_VIDEO_START_BITRATE_KBPS=6000

# Max video bitrate caps per codec (kbps)
MEDIA_VIDEO_MAX_BITRATE_VP8_KBPS=25000
MEDIA_VIDEO_MAX_BITRATE_H264_KBPS=30000
MEDIA_VIDEO_MAX_BITRATE_VP9_KBPS=35000
MEDIA_VIDEO_MAX_BITRATE_AV1_KBPS=35000

# WebRTC transport bitrate limits (bps)
MEDIA_WEBRTC_MAX_INCOMING_BITRATE_BPS=50000000
MEDIA_WEBRTC_INITIAL_OUTGOING_BITRATE_BPS=100000000

# Optional S3 defaults (used as documentation/examples for storage settings UI)
# RogueCord stores per-server S3 credentials/settings in SQLite and not from these env vars.
# These values are useful for deployment templates and Hetzner Object Storage setup notes.
S3_DEFAULT_ENDPOINT=https://nbg1.your-objectstorage.com
S3_DEFAULT_REGION=nbg1
S3_DEFAULT_BUCKET=roguecord-files
S3_DEFAULT_PREFIX=
